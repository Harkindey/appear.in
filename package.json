{
  "private": true,
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && npm run compile && electron ./app",
    "test": "mocha",
    "compile": "rimraf app/out",
    "pack": "npm run compile && build --dir",
    "dist": "npm run compile && build"
  },
  "build": {
    "appId": "xyz.meadowcottage.Appear_in",
    "category": "public.app-category.social",
    "productName": "Appear.in",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "remoteReleases": "https://github.com/meadowcottage/Appear.in",
      "loadingGif": "build/install-spinner.gif"
    }
  },
  "dependencies": {
    "electron-config": "^0.2.1",
    "electron-dl": "^1.5.0",
    "electron-is-dev": "^0.1.2"
  },
  "devDependencies": {
    "electron": "^1.3.5",
    "electron-builder": "^6.4.1",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "spectron": "^3.3.0"
  },
  "packageIgnore": [
    "LICENSE.md",
    "README.md",
    ".DS_Store",
    ".travis.yml",
    "appveyor.yml",
    "tests",
    "dist",
    "build/Screenshot-dark-1.png",
    "build/Screenshot-dark-2.png",
    "build/Screenshot-light-1.png",
    "build/Screenshot-light-2.png"
  ]
}
